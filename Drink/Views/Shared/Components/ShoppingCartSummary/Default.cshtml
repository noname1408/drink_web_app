@model ShoppingCartViewModel


@if (Model.ShoppingCart.ShoppingCartItems.Count >= 0)
{
    <li class="pull-right">
        <a asp-controller="ShoppingCart">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.ShoppingCart.ShoppingCartItems.Count
            </span>
        </a>
    </li>

}